{
  "name": "script-studio",
  "version": "0.2.0",
  "main": "electron-main.js",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "electron .",
    "start:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "package": "electron-builder --dir",
    "dist": "electron-builder --mac --win --linux"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "vite": "^5.0.0",
    "concurrently": "^8.0.0",
    "wait-on": "^7.0.0",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "jsdiff": "^4.1.0",
    "xml2js": "^0.5.0"
  },
  "build": {
    "appId": "com.yourcompany.scriptstudio",
    "productName": "Script Studio",
    "files": [
      "dist/**/*",
      "electron-main.js",
      "preload.js",
      "package.json"
    ],
    "mac": { "target": "dmg" },
    "win": { "target": "nsis" },
    "linux": { "target": "AppImage" }
  }
}
